# SkillNavigator Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# GENERAL APPLICATION SETTINGS
# ================================

# Application environment (development, staging, production)
APP_ENV=development

# Application name and version
APP_NAME=SkillNavigator
APP_VERSION=1.0.0

# Server configuration
HOST=localhost
PORT=8000
DEBUG=true

# Secret key for JWT tokens and encryption (generate a secure random string)
SECRET_KEY=your_secret_key_here

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# ================================
# DATABASE CONFIGURATION
# ================================

# Database URL for SQLAlchemy
# For SQLite (default): sqlite:///./skillnavigator.db
# For PostgreSQL: postgresql://username:password@localhost/dbname
# For MySQL: mysql://username:password@localhost/dbname
DATABASE_URL=sqlite:///./skillnavigator.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ================================
# AI/ML API CONFIGURATION
# ================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_REQUESTS_PER_MINUTE=20

# Alternative AI providers (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Hugging Face Hub for sentence transformers (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ================================
# JOB PORTAL CONFIGURATION
# ================================

# Job Portal URLs (for scraping)
LINKEDIN_URL=https://www.linkedin.com/jobs/search
INDEED_URL=https://www.indeed.com/jobs
INTERNSHALA_URL=https://internshala.com/jobs

# LinkedIn API credentials (optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Indeed API credentials (optional)
INDEED_PUBLISHER_ID=your-indeed-publisher-id
INDEED_API_KEY=your-indeed-api-key

# Other job portals (if available)
GLASSDOOR_API_KEY=your-glassdoor-api-key
ZIPRECRUITER_API_KEY=your-ziprecruiter-api-key

# ================================
# WEB SCRAPING CONFIGURATION
# ================================

# Playwright browser settings
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Scraping rate limits and delays
SCRAPING_DELAY=2
MAX_JOBS_PER_SEARCH=50
CONCURRENT_REQUESTS=3
REQUESTS_PER_MINUTE=60

# User agent for web scraping
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Proxy configuration (optional)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ================================
# EMAIL CONFIGURATION
# ================================

# SMTP settings for email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_USE_TLS=true

# Email templates
FROM_EMAIL=skillnavigator@yourcompany.com
FROM_NAME=SkillNavigator
SUPPORT_EMAIL=support@yourcompany.com

# ================================
# FILE STORAGE CONFIGURATION
# ================================

# Local file storage paths
UPLOAD_DIRECTORY=./uploads
RESUME_DIR=uploads/resumes
COVER_LETTER_DIR=uploads/cover_letters
LOG_DIR=logs

# Maximum file sizes and types
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "doc", "docx"]

# AWS S3 configuration (optional, for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=skillnavigator-files
AWS_REGION=us-west-2

# ================================
# APPLICATION FEATURES
# ================================

# Auto-application settings
AUTO_APPLY_ENABLED=false
MAX_APPLICATIONS_PER_DAY=10
COVER_LETTER_TEMPLATE=default

# Feature flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEB_SCRAPING=true
ENABLE_AI_SCORING=true
ENABLE_BACKGROUND_TASKS=true

# Beta features
ENABLE_SALARY_PREDICTION=false
ENABLE_COMPANY_INSIGHTS=false
ENABLE_INTERVIEW_PREP=false

# ================================
# FRONTEND CONFIGURATION
# ================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]
CORS_CREDENTIALS=true

# ================================
# SECURITY CONFIGURATION
# ================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600       # 1 hour

# API key for external access
API_KEY=your-api-key-for-external-access

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ================================
# LOGGING AND MONITORING
# ================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/skillnavigator.log
LOG_MAX_SIZE=10485760        # 10MB
LOG_BACKUP_COUNT=5

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error tracking (Sentry, optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# ================================
# BACKGROUND TASK CONFIGURATION
# ================================

# Redis for caching and background tasks (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Background task schedules (in minutes)
SCRAPING_INTERVAL=60         # Run scraping every hour
SCORING_INTERVAL=30          # Run scoring every 30 minutes
TRACKING_INTERVAL=120        # Run tracking every 2 hours
CLEANUP_INTERVAL=1440        # Run cleanup daily

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Development-specific settings
DEV_MOCK_APIS=false          # Use mock responses instead of real APIs
DEV_SKIP_AUTH=false          # Skip authentication in development
DEV_SAMPLE_DATA=true         # Load sample data on startup

# Testing configuration
TEST_DATABASE_URL=sqlite:///./test_skillnavigator.db
TEST_OPENAI_API_KEY=test-key
TEST_SKIP_REAL_APIS=true

# ================================
# EXTERNAL INTEGRATIONS
# ================================

# Slack integration for notifications (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#skillnavigator

# Discord integration (optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Twilio for SMS notifications (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# COMPLIANCE AND PRIVACY
# ================================

# GDPR compliance
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true
DATA_RETENTION_DAYS=365

# Privacy settings
ANONYMIZE_LOGS=true
ENCRYPT_SENSITIVE_DATA=true

# Terms of service and privacy policy URLs
TERMS_OF_SERVICE_URL=https://yourcompany.com/terms
PRIVACY_POLICY_URL=https://yourcompany.com/privacy
